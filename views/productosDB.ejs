<body>
    <div>esto son los productos por db</div>

    <main>
    

    
        <h1 class="">Basado en tu Ãºltima visita</h1>
     


            <% for(let i = 0; i  < productoss.length; i++ ){%>
                <section class="section-producto">
                    <article>
    
                        <a href="/producto/<%= productoss[i].id%> ">
                        <div class="container-img">
                              <img src="<%= productoss[i].product_img%>" alt="" class="img">
                        </div> 
                        <div class="container-des"> 
                              <i class="circulo"><i class="fa-solid fa-truck" id="auto"></i></i>
                              <div class="container-precio-descuentos">
                                  <p class="precio"><%= productoss[i].product_name%></p>
                                  <p class="descuentos"><%= productoss[i].product_category%></p>
                              </div>
                              <strong class="descripciones"><%= productoss[i].product_description%></strong>
                        </div>
                        </a>
                    </article>
                        
            </section>
                <% }%> 
          
    
    </main>
</body>
